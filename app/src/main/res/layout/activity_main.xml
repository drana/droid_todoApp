<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp"
        android:text="@string/app_tittle"
        android:textStyle="bold"
        android:textColor="@color/TextColorToolbar"
        android:layout_alignParentLeft="true"
        android:clickable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5sp"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:text="@string/edit_button"
        android:id="@+id/btn_Edit"
        android:layout_alignParentRight="true"
        android:background="@color/bright_foreground_material_dark"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/TextColorToolbar"
        android:id="@+id/viewLine"
        android:layout_below="@+id/btn_Edit" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewLine"
        android:layout_above="@+id/btn_AddItem"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:id="@+id/lv_ListofItems"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/TextColorToolbar"
        android:id="@+id/viewLineBottom"
        android:layout_below="@+id/lv_ListofItems" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noOfItems"
        android:layout_below="@+id/viewLineBottom"
        android:layout_centerInParent="true"
        android:layout_marginTop="15sp"
        android:text="0 Notes"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/ic_add_text_enabled"
        android:id="@+id/btn_AddItem"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />




</RelativeLayout>
